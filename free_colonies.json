  "rules": {
    "stealth_field": {
      "name": "Stealth Field",
      "description": "Once per round, when an enemy unit targets a friendly _Infantry_ unit within 3\" suffer -1 Accuracy. This may be used one additional time per round for each model with this rule.",
      "points": 5
    },
    "pulse_shield": {
      "name": "Pulse Shield",
      "description": "Once per round, when an enemy unit targets a friendly _Infantry_ unit within 3\" roll a die for each hit that unit takes. On a 3 or less that hit is prevented. This may be used one additional time per round for each model with this rule.",
      "points": 5
    },
    "commander_tactics": {
      "name": "Commander Tactics",
      "inputs": ["x"],
      "description": "When this unit is activated, choose up to X friendly _Infantry_ or _Heavy Infantry_ units within 6\" to receive one of the following bonuses until the end of the round: \n * Re-roll failed Accuracy tests of 9+ \n * Re-roll failed Initiative tests of 9+",
      "points": ["rule.x", {"multiply": 5}]
    },
    "warrior_tactics": {
      "name": "Warrior Tactics",
      "inputs": ["x"],
      "description": "When this unit is activated, choose up to X friendly _Infantry_ units within 6\" to receive one of the following bonuses until the end of the round: \n * Re-roll failed Accuracy tests of 9+ \n * Re-roll failed Initiative tests of 9+",
      "points": ["rule.x", {"multiply": 5}]
    },
    "avian_tactics": {
      "name": "Avian Tactics",
      "inputs": ["x"],
      "description": "When this unit is activated, choose up to X friendly _Avian Mercenaries_ _Infantry_ units within 6\" to receive one of the following bonuses until the end of the round: \n * Re-roll failed Accuracy tests of 9+ \n * Re-roll failed Strength tests of 9+",
      "points": ["rule.x", {"multiply": 5}]
    },
    "attached": {"name": "Attached", "description": "This model is attached to its hosting unit and counts as being embarked but does not take up any transport space and may shoot while embarked."},
    "spotting_laser": {
      "name": "Spotting Laser",
      "description": "Any time during this model's activation, pick an enemy unit within 36\" to gain 1 spotting marker. When a friendly unit shoots at that target they may spend spotting markers to gain the following for that attack: \n * One Marker: Re-roll Accuracy rolls of 9+ \n * Two Markers: +1 Accuracy \n\n\n These effects are cumulative and may be activated multiple times. At the end of the round, remove all spotting markers.",
      "points": 5
    },
    "homing_beacon": {
      "name": "Homing Beacon",
      "description": "Friendly units deploying using Ambush deployment may ignore enemy units when deploying within 6\" of this model and automatically pass Initiative tests to Ambush.",
      "points": 5
    },
    "inhibitor": {"name": "Inhibitor", "description": "Enemy units suffer -2\" of movement with any Charge actions targeting friendly units within 3\".", "points": 5},
    "recon_drone": {"name": "Recon Scope", "description": "Friendly models within 3\" may ignore cover bonuses.", "points": 2},
    "accelerator": {"name": "Accelerator", "description": "Friendly models within 3\" add +3\" to the short and long ranges of all weapons.", "points": 5},
    "threat_detector_suit": {"name": "Threat Detector", "description_short": "+1 Initiative", "description": "This model gets +1 Initiative.", "points": 5},
    "hover_drone": {"name": "Hover Drone", "hidden": "true", "description": "This model gets +2\" Move and Fly.", "description_short": "+4\" Move, Fly", "points": 5},
    "protection": {"name": "Protection", "description": "Friendly _Infantry_ units within 3\" get +1 Save.", "points": 5},
    "target_lock": {"name": "Target Lock", "description": "This model gains +1 Accuracy.", "points": 10},
    "lookout_system": {
      "name": "Lookout System",
      "description": "Models in this unit may reroll Initiative checks when attempting the Counter-Attack reaction. Multiple Lookout Systems do not stack bonuses.",
      "points": 5
    },
    "drone_controller": {"name": "Drone Controller", "description": "_Drone_ models in this unit gain +1 Accuracy. Multiple Drone Contollers do not stack bonuses.", "points": 5},
    "pulse_buckler": {"name": "Pulse Buckler", "description": "This model has +1 Save against melee attacks.", "points": 2},
    "advanced_plating": {"name": "Advanced Plating", "hidden": "true", "description": "This model gains +1 Save.", "description_short": "+1 Save", "points": 4},
    "legend_emergency_kit": {"name": "Emergency Kit", "description": "Once per game at the start this unit's activation, it may choose to regain Wounds(x) equal to half its total Wounds(x) value rounded up. This may not bring the unit above its maximum Wounds(x) value.", "points": 4},
    "legend_advanced_spotting_laser": {
      "name": "Advanced Spotting Laser",
      "description": "Any time during this model's activation, pick an enemy unit within 36\" to gain 2 spotting markers. When a friendly unit shoots at that target they may spend spotting markers to gain the following for that attack: \n * One Marker: Re-roll Accuracy rolls of 9+ \n * Two Markers: +1 Accuracy \n\n\n These effects are cumulative and may be activated multiple times. At the end of the round, remove all spotting markers.",
      "points": 5
    }
  },
  "strategies": {
    "covering_fire": {
      "name": "Covering Fire",
      "phase": "activation",
      "flavor": "Members of the Colonies are tirelessly drilled on covering one another in the event that one unit is overrun.",
      "description": "Use when a friendly _Infantry_ or _Heavy Infantry_ unit is Charged. One friendly _Infantry_ or _Heavy Infantry_ unit within 6\" may take an Initiative test and attempt to react to the charging unit.",
      "cost": 1
    },
    "preservation_protocols": {
      "name": "Preservation Protocols",
      "phase": "activation",
      "flavor": "Colony drones are programmed to protect their creators at all costs.",
      "description": "Use after an _Infantry_ or _Heavy Infantry_ unit has been hit by a ranged weapon. For this attack, you can roll a D10 each time an attack made with a ranged weapon hits that unit. If there is a friendly _Drone_ unit within 6\" of it, and the _Drone_ unit is closer to the attacking model than the target unit. On an 8 or less a hit is transferred to the _Drone_ unit instead of the original target.",
      "cost": 2
    },
    "danger_close": {
      "phase": "activation",
      "name": "Danger Close",
      "description": "Use when shooting with an _Infantry_ unit. That unit may target enemies it is engaged with at -1 Accuracy.",
      "flavor": "Colony troops are trained to use defensive tactics to protect themselves in close quarters.",
      "cost": 1
    },
    "moving_fire": {
      "subfactions": ["mobility_focus"],
      "name": "Moving Fire",
      "phase": "activation",
      "flavor": "These troops are trained to shoot while moving to maintain pressure on their enemies.",
      "description": "Use after an _Infantry_ unit Shoots with an _Assault_ weapon. That unit may ignore the -1 Accuracy penalty.",
      "cost": 1
    },
    "double_time": {
      "subfactions": ["mobility_focus"],
      "phase": "activation",
      "name": "Double Time",
      "description": "Use when a unit makes a Move action. It gains +3\" of Movement for that action",
      "flavor": "At some points in battle it is necessary to move with great urgency.",
      "cost": 1
    },
    "focus_fire": {
      "phase": "activation",
      "subfactions": ["mobility_focus"],
      "name": "Burst",
      "flavor": "With a wave of fire, surely any target could not survive.",
      "description": "Use when an _Infantry_ unit makes a Shoot action with a _Pulse_ weapon. Successful hits cause 2 hits instead of 1.",
      "cost": 1
    },
    "vigilance": {
      "subfactions": ["vigilance_focus"],
      "name": "Vigilance",
      "phase": "activation",
      "description": "Use when taking an Initiative test for a reaction. That unit is treated as having +2 Initiative for that test.",
      "flavor": "With countless battles experienced, these troops are trained to react to any situation.",
      "cost": 1
    },
    "cautious": {
      "subfactions": ["vigilance_focus"],
      "name": "Cautious",
      "phase": "activation",
      "description": "Use after an _Infantry_ unit performs a Move action. That unit may perform a free Hold action.",
      "flavor": "Cautious movement can be key to staying alive.",
      "cost": 1
    },
    "overcharge": {
      "phase": "activation",
      "subfactions": ["vigilance_focus"],
      "name": "Overcharge",
      "flavor": "By overcharging their weapons, some hits can pierce even heavily armored targets.",
      "description": "Use when an _Infantry_ unit makes a Shoot action. Successful hits gain +1 AP.",
      "cost": 1
    }
  },
